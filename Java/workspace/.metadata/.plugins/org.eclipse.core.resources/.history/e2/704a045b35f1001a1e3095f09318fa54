package firstquiz;

public class Main {
	///////global public vars//////////
public int minutes,hours;
///////tick/////////////////
public void tick() {
	minutes++;
	hours+=minutes/60;
	minutes%=60;
	hours%=24;
}
////////////show//////////
public void show() {
	if (hours < 10)
		System.out.print("0");
	System.out.print(hours +":");
	if(minutes < 10)
		System.out.print("0");
	System.out.print(minutes);
}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
